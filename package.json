{
  "name": "inache",
  "version": "0.0.1",
  "description": "",
  "repository": "",
  "main": "serverNode.js",
  "dependencies": {
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.3.0",
    "classnames": "^2.1.3",
    "css-modulesify": "^0.24.0",
    "flux": "^2.0.1",
    "keymirror": "~0.1.0",
    "object-assign": "^1.0.0",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-router": "^2.4.1",
    "reactify": "^1.1.1"
  },
  "devDependencies": {
    "browserify": "^6.2.0",
    "envify": "^3.0.0",
    "jest-cli": "^0.4.3",
    "uglify-js": "~2.4.15",
    "watchify": "^2.1.1"
  },
  "scripts": {
    "start": "npm run create-dirs && npm run cp-images && npm run build-css && npm run build-index && npm run watch & node serverNode.js",
    "watch": "watchify -p [css-modulesify -o public/css/app.css] -o public/js/bundle.js -v -d js/app.js -t [babelify --presets [ react ] ]",
    "build": "browserify . -t [envify --NODE_ENV production] | uglifyjs -cm > public/js/bundle.min.js",
    "test": "jest",
    "create-dirs": "mkdir -p public/css && mkdir -p public/js && mkdir -p public/img",
    "build-index": "cp js/index.html public/",
    "build-css": "cat css/*.css > public/css/app.css",
    "cp-images": "cp -R img public"
  },
  "author": "Khimtsov Anton",
  "browserify": {
    "transform": [
      "reactify",
      "envify"
    ]
  },
  "jest": {
    "rootDir": "./js"
  }
}
