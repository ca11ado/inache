{
  "name": "inache",
  "version": "0.0.1",
  "description": "",
  "repository": "",
  "main": "serverNode.js",
  "dependencies": {
    "classnames": "^2.1.3",
    "flux": "^2.0.1",
    "keymirror": "~0.1.0",
    "object-assign": "^1.0.0",
    "react": "^0.12.0"
  },
  "devDependencies": {
    "browserify": "^6.2.0",
    "envify": "^3.0.0",
    "jest-cli": "^0.4.3",
    "reactify": "^0.15.2",
    "uglify-js": "~2.4.15",
    "watchify": "^2.1.1"
  },
  "scripts": {
    "start": "npm run create-dirs && npm run build-css && npm run build-index && npm run watch & node serverNode.js",
    "watch": "watchify -o public/js/bundle.js -v -d js/app.js -t reactify -t [babelify --presets [ es2015 ] ]",
    "build": "browserify . -t [envify --NODE_ENV production] | uglifyjs -cm > public/js/bundle.min.js",
    "test": "jest",
    "create-dirs": "mkdir -p public/css && mkdir -p public/js",
    "build-index": "cp js/index.html public/",
    "build-css": "cat css/*.css > public/css/app.css"
  },
  "author": "Khimtsov Anton",
  "browserify": {
    "transform": [
      "reactify",
      "envify"
    ]
  },
  "jest": {
    "rootDir": "./js"
  }
}
