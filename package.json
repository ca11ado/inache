{
  "name": "inache",
  "version": "0.0.1",
  "description": "",
  "main": "serverNode.js",
  "dependencies": {
  },
  "devDependencies": {
    "jest": "^24.8.0",
    "keymirror": "^0.1.1",
    "webpack": "^4.39.1"
  },
  "scripts": {
    "start": "npm run cp-files && if test \"$NODE_ENV\" != \"production\" ; then npm run start:dev; else npm run start:prod; fi",
    "start:dev": "npm run update-db && (webpack --watch & node serverNode.js)",
    "start:prod": "webpack && node serverNode.js",
    "cp-files": "mkdir -p public/img && cp -R img public && cp js/index.html public",
    "update-db": "rm -f db.json && cd ./utils && node ./db-utils.js && cd ..",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "build": "npm run cp-files && webpack"
  },
  "author": "Khimtsov Anton"
}
